<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            tools:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvRecommendationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toEndOf="@id/ivProductImage"
            android:lines="3"
            android:paddingStart="20dp"
            android:textSize="16sp"
            tools:text="Telefon mobil Samsung S8\na doua linie" />

        <TextView
            android:id="@+id/tvVendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRecommendationTitle"
            android:layout_margin="4dp"
            android:layout_toEndOf="@id/ivProductImage"
            android:paddingStart="20dp"
            android:text="VÃ¢ndut de eMAG"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvRecommentationPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/ivProductImage"
            android:layout_alignBottom="@id/ivProductImage"
            android:layout_below="@id/tvVendor"
            android:layout_margin="4dp"
            android:layout_toEndOf="@id/ivProductImage"
            android:gravity="bottom"
            android:lines="1"
            android:paddingStart="20dp"
            android:textColor="@color/red"
            android:textSize="17sp"
            tools:text="900 RON" />

    </RelativeLayout>

</android.support.v7.widget.CardView>